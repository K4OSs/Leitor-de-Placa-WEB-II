
{ "version": 2, "rewrites": [{ "source": "/(.*)", "destination": "/api" }],  

    "builds": [
        {
        "src": "public/**/*",
        "use": "@vercel/static"
        },
        {
        "src": "api/index.js",
        "use": "@vercel/node"
        }
    ],
    "routes": [
    {
        "src": "/api/(.*)",
        "dest": "/api/index.js"
    },
    {
        "src": "/(.*)",
        "dest": "/public/index.html"
    }
    ]
}